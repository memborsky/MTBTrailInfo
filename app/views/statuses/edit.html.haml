%h1 Trail Status

%table{:class=>"table table-striped table-bordered table-condensed"}
  %thead
    %tr
      %th 
      %th Trail
      %th Notes
      %th Last Updated
      
  %tbody
    - @statuses.each do |status|
      %tr
        %td
          %img{:src=>status.imageurl}
        %td= status.trailname
        %td= status.statusstring
        %td= status.lastupdate

%p

%h1 Update Trail
= form_tag :method=>:put do
  =select_tag "trail", options_from_collection_for_select(@trails, "id", "name"), :placeholder=>"Trail"
  =select_tag "statusid", options_from_collection_for_select(@statusinfo, "id", "text"), :placeholder=>"Status"
  =text_field_tag( "statusdetails")
  = submit_tag 'Update', :class=>"btn btn-primary", :id=>'status_submit'
  
